% ¦rodowisko w którym u¿ywamy funkcji tabeli
% Parametry: uk³ad kolumn (|c|c|...), ilo¶æ kolumn
\newenvironment{ColorTable}[2]
{
	\def\ColumnNumber{#2}
	% Zmienna kolorystyka, oddzielone poziom± lini±...
	\rowcolors[\hline]{0}{white}{CRow}
	\begin{tabular}{#1}
}
{
	\end{tabular}
}

\newenvironment{LongColorTable}[2]
{
	\def\ColumnNumber{#2}
%	\rowcolors[\hline]{0}{white}{CRow}
