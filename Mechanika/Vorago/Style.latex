\newcommand{\Vorago}[0]{\textsc{Vorago}\xspace}

%%%% Definicje kolorystyki dokumentu %%%%
\definecolor{CDark}{rgb}{0.4,0.4,0.6}
\definecolor{CLight}{rgb}{0.6,0.6,0.8}
