}
{
	\end{longtable}
}

% Pojedyncza komórka...
\newcommand{\SingleCell}[2]
	{\multicolumn{\ColumnNumber}{#1}{ #2 } \\}

% G³ówny nag³ówek.
% Dwa parametry: liczba kolumn, tekst nag³ówka
\newcommand{\PrimaryHeader}[1]
	{\SingleCell{|c|}{\cellcolor{CDark} #1}}

